<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">
    <View
        android:id="@+id/adapter_saved_post_divider"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#8c8c8c"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/adapter_saved_post_img"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_bg"
            app:riv_corner_radius="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adapter_saved_post_title"
                    style="@style/PostItemTitle"
                    android:layout_gravity="top"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:lineSpacingMultiplier="0.85"
                    android:minLines="3"
                    android:text="@string/lorem_ipsum_long"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adapter_saved_post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="June 12, 2016"
                    android:textSize="14sp"
                    android:textColor="#8c8c8c" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>