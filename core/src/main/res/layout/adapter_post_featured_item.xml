<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/featured_item_height">
        <ImageView
            android:id="@+id/featured_post_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/featured_item_height"
            android:scaleType="centerCrop"
            android:transitionName="@string/image_transition"/>
        <ImageView
            android:src="@drawable/fade"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.socratica.mobile.TypefaceTextView
            android:id="@+id/featured_post_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/lorem_ipsum_long"
            android:textColor="#FFF"
            android:textSize="20sp" />
        <LinearLayout
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_like_white"
                android:layout_width="@dimen/like_heart_size"
                android:layout_height="@dimen/like_heart_size"
                android:id="@+id/featured_post_item_like_img" />

            <com.socratica.mobile.TypefaceTextView
                android:id="@+id/featured_post_item_likes"
                android:layout_marginLeft="2dp"
                android:textColor="#FFF"
                android:text="118"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.makeuseof.muocore.ui.widgets.FormatDateView
                android:id="@+id/featured_post_item_time"
                android:layout_marginLeft="30dp"
                android:textColor="#FFF"
                android:text="2h"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
