<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <View
        android:id="@+id/adapter_currency_top_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_grey"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/adapter_currency_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_grey"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adapter_currency_symbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:text="BTC"
            android:textColor="@color/default_text"
            android:textStyle="bold"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/default_grey"/>

        <TextView
            android:id="@+id/adapter_currency_market_cap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            app:layout_constraintLeft_toRightOf="@+id/adapter_currency_symbol"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/adapter_currency_volume"
            android:gravity="center"
            android:textColor="@color/default_text"
            android:textSize="12.5sp"
            android:text="$165b"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/default_grey"/>

        <TextView
            android:id="@+id/adapter_currency_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            app:layout_constraintLeft_toRightOf="@+id/adapter_currency_market_cap"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/adapter_currency_price"
            android:gravity="center"
            android:textColor="@color/default_text"
            android:textSize="12.5sp"
            android:text="$9.8b"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/default_grey"/>

        <TextView
            android:id="@+id/adapter_currency_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="$800.0"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
