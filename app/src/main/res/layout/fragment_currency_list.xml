<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/fragment_watchlist_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@color/full_transparent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <com.makeuseof.cryptocurrency.view.widgets.FontTextView
                android:id="@+id/fragment_watchlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="40dp"
                android:text="Cryptocurrency"
                app:ftv_typeface="medium"
                android:textColor="@color/white"
                android:textSize="26sp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_currency_list_refresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_currency_list_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_currency_list_header"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:id="@+id/fragment_currency_list_header"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeuseof.cryptocurrency.view.widgets.FontTextView
                    android:id="@+id/adapter_currency_symbol"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingLeft="20dp"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textColor="@color/light_text" />

                <com.makeuseof.cryptocurrency.view.widgets.FontTextView
                    android:id="@+id/adapter_currency_market_cap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    app:layout_constraintLeft_toRightOf="@+id/adapter_currency_symbol"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/adapter_currency_volume"
                    android:gravity="center"
                    android:textColor="@color/light_text"
                    android:text="Market Cap"
                    android:textSize="14sp"/>

                <com.makeuseof.cryptocurrency.view.widgets.FontTextView
                    android:id="@+id/adapter_currency_volume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    app:layout_constraintLeft_toRightOf="@+id/adapter_currency_market_cap"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/adapter_currency_price"
                    android:gravity="center"
                    android:textColor="@color/light_text"
                    android:text="Volume(24h)"
                    android:textSize="14sp"/>

                <com.makeuseof.cryptocurrency.view.widgets.FontTextView
                    android:id="@+id/adapter_currency_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:textColor="@color/light_text"
                    android:text="Price(24h)"
                    android:textSize="14sp"/>

            </LinearLayout>

            <include
                android:id="@+id/fragment_currency_list_error"
                layout="@layout/connection_error"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>

