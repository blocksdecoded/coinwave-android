<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="AppTheme.NoActionBarLight">
        <item name="android:windowBackground">@drawable/bg_light_main</item>
        <item name="colorPrimaryDark">@color/dark_status_bar</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.LaunchScreen" parent="AppTheme.Fullscreen">
        <item name="android:windowBackground">@drawable/bg_launch_screen</item>
    </style>

    <style name="AppTheme.ProgressStyle">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.TabBarTextStyle" parent="android:TextAppearance.Widget.TabWidget">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Material.PopupMenu" tools:targetApi="lollipop">
        <item name="android:popupBackground">@color/cardview_dark_background</item>
        <item name="android:popupElevation">4dp</item>
    </style>

    <style name="AppTheme.FieldTitle" parent="LightTextStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">#747679</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.FieldValue" parent="RegularTextStyle">
        <item name="android:textColor">#1b242a</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
    </style>
    
    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>
    
    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    
    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    
    <!-- Drawer Text fields -->

    <style name="AppTheme.DrawerMenuItem" parent="LightTextStyle">
        <item name="android:paddingLeft">56dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/drawer_item_bg</item>
        <item name="android:textColor">@drawable/drawer_text_color</item>
    </style>

    <style name="AppTheme.DrawerTitle" parent="LightTextStyle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Default Text styles -->

    <style name="BaseTextStyle">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="RegularTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="BoldTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="SemiBoldTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
    </style>

    <style name="LightTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/sf_pro_text_light</item>
    </style>
    
    <style name="ListHeaderItem" parent="LightTextStyle">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textSize">11.5sp</item>
    </style>
    
    

</resources>
