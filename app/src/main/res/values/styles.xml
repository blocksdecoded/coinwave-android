<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarLight">
        <item name="android:windowBackground">@drawable/bg_light_main</item>
        <item name="colorPrimaryDark">@color/dark_status_bar</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.ProgressStyle">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.TabBarTextStyle" parent="android:TextAppearance.Widget.TabWidget">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Material.PopupMenu" tools:targetApi="lollipop">
        <item name="android:popupBackground">@color/cardview_dark_background</item>
        <item name="android:popupElevation">4dp</item>
    </style>

    <style name="AppTheme.FieldTitle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="AppTheme.FieldValue">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="AppTheme.DrawerMenuItem">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/drawer_item_bg</item>
        <item name="android:textColor">@drawable/drawer_text_color</item>
    </style>

    <style name="AppTheme.DrawerTitle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
