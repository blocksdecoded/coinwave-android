<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowActionBar">false</item>
    </style>
    
    <style name="DialogButton">
        <item name="android:textColor">@drawable/button_text_state</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppThemeRatingBar">
        <item name="colorPrimary">@color/rating_active</item>
        <item name="colorPrimaryDark">@color/rating_active</item>
        <item name="colorAccent">@color/rating_active</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>
</resources>